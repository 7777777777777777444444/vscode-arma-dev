{
    "name": "arma-dev",
    "displayName": "Arma Dev",
    "description": "Arma 3 Developer automation tools",
    "version": "0.0.1",
    "publisher": "ole1986",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:armadev.setupConfig",
        "workspaceContains:.vscode/arma-dev.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "armadev.setupConfig",
            "title": "Arma3: Configure"
        },{
            "command": "armadev.packFolders",
            "title": "Arma3: Pack"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}